<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="600px" >

    <ListView
        android:id="@+id/every_memo_list"
        android:layout_width="368px"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="True"
        android:layout_alignParentTop="True"
        android:layout_marginLeft="35px"
        android:layout_marginTop="57px"
        android:dividerHeight="22px" />

    <Button
        android:id="@+id/every_memo_btn_new"
        android:layout_width="42px"
        android:layout_height="40px"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20px"
        android:layout_marginLeft="10px"
        android:layout_toRightOf="@id/every_memo_list"
        android:background="@drawable/every_new" />

</RelativeLayout>